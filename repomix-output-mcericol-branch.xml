@import "tailwindcss";

/* @tailwind base;
@tailwind components;
@tailwind utilities; */

@layer utilities {
  .text-balance {
    text-wrap: balance;
  }
}

@layer base {
  :root {
    /* Eco palette: seafoam, mint, fern, pine */
    --background: 150 25% 96%;
    --foreground: 155 45% 12%;
    --card: 150 20% 98%;
    --card-foreground: 155 45% 12%;
    --popover: 150 20% 98%;
    --popover-foreground: 155 45% 12%;
    --primary: 145 48% 32%;
    --primary-foreground: 150 30% 97%;
    --secondary: 155 25% 90%;
    --secondary-foreground: 155 45% 15%;
    --muted: 150 18% 92%;
    --muted-foreground: 155 15% 42%;
    --accent: 162 38% 65%;
    --accent-foreground: 155 50% 10%;
    --destructive: 0 72% 51%;
    --destructive-foreground: 0 0% 98%;
    --border: 150 20% 86%;
    --input: 150 20% 86%;
    --ring: 145 48% 32%;
    --chart-1: 145 48% 32%;
    --chart-2: 162 38% 65%;
    --chart-3: 155 60% 20%;
    --chart-4: 150 30% 75%;
    --chart-5: 140 35% 50%;
    --radius: 0.75rem;
    --sidebar-background: 155 30% 95%;
    --sidebar-foreground: 155 45% 15%;
    --sidebar-primary: 145 48% 32%;
    --sidebar-primary-foreground: 0 0% 98%;
    --sidebar-accent: 150 25% 90%;
    --sidebar-accent-foreground: 155 45% 15%;
    --sidebar-border: 150 20% 86%;
    --sidebar-ring: 145 48% 32%;

    /* Custom eco tokens */
    --pine: 155 60% 20%;
    --pine-light: 155 40% 30%;
    --seafoam: 162 38% 65%;
    --mint: 150 35% 88%;
    --fern: 145 48% 32%;
  }
}

@layer base {
  * {
    @apply border-border;
  }
  body {
    @apply bg-background text-foreground;
  }
}

/* Mosaic tile background pattern */
.mosaic-bg {
  background-color: hsl(150 25% 96%);
  background-image:
    linear-gradient(30deg, hsl(155 60% 20% / 0.04) 12%, transparent 12.5%, transparent 87%, hsl(155 60% 20% / 0.04) 87.5%, hsl(155 60% 20% / 0.04)),
    linear-gradient(150deg, hsl(155 60% 20% / 0.04) 12%, transparent 12.5%, transparent 87%, hsl(155 60% 20% / 0.04) 87.5%, hsl(155 60% 20% / 0.04)),
    linear-gradient(30deg, hsl(155 60% 20% / 0.04) 12%, transparent 12.5%, transparent 87%, hsl(155 60% 20% / 0.04) 87.5%, hsl(155 60% 20% / 0.04)),
    linear-gradient(150deg, hsl(155 60% 20% / 0.04) 12%, transparent 12.5%, transparent 87%, hsl(155 60% 20% / 0.04) 87.5%, hsl(155 60% 20% / 0.04)),
    linear-gradient(60deg, hsl(162 38% 65% / 0.06) 25%, transparent 25.5%, transparent 75%, hsl(162 38% 65% / 0.06) 75%, hsl(162 38% 65% / 0.06)),
    linear-gradient(60deg, hsl(162 38% 65% / 0.06) 25%, transparent 25.5%, transparent 75%, hsl(162 38% 65% / 0.06) 75%, hsl(162 38% 65% / 0.06));
  background-size: 80px 140px;
  background-position: 0 0, 0 0, 40px 70px, 40px 70px, 0 0, 40px 70px;
}

/* Pine gradient for hero/accent areas */
.pine-gradient {
  background: linear-gradient(135deg, hsl(155 60% 20%), hsl(155 40% 30%), hsl(145 48% 32%));
}

/* Scrollbar styling */
.custom-scrollbar::-webkit-scrollbar {
  width: 6px;
}
.custom-scrollbar::-webkit-scrollbar-track {
  background: hsl(150 18% 92%);
  border-radius: 3px;
}
.custom-scrollbar::-webkit-scrollbar-thumb {
  background: hsl(150 20% 76%);
  border-radius: 3px;
}
.custom-scrollbar::-webkit-scrollbar-thumb:hover {
  background: hsl(145 48% 32%);
}

/* Typing animation */
@keyframes blink {
  0%, 50% { opacity: 1; }
  51%, 100% { opacity: 0; }
}
.typing-cursor::after {
  content: '|';
  animation: blink 1s infinite;
  color: hsl(145 48% 32%);
  margin-left: 1px;
}
